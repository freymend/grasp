{
    "$schema": "http://json.schemastore.org/eslintrc",
    "plugins": [
        "prettier"
    ],
    "root": true,
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "tabWidth": 4
            }
        ]
    },
    "extends": [
        "typescript",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2023,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "public/",
        "src/assets/"
    ]
}